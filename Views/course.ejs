<body>
    <div class="main-container">
        <div class="container">
            <nav class="css-navbar navbar mb-5" style="padding: 5px;">
                <div class="navbar-div " style="align-items: initial;">
                    <a class="navbar-brand fs-2 text-white">Course Management</a>
                    <div class="d-flex button-div justify-content-center addCourse">
                        <button class="btn text-white" type="submit" data-bs-target="#exampleModalToggle"
                            data-bs-toggle="modal">Add Courses</button>
                    </div>
                </div>
            </nav>
            <div class="modal fade" id="exampleModalToggle" aria-hidden="true" aria-labelledby="exampleModalToggleLabel"
                tabindex="-1">
                <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
                    <div class="modal-content">
                        <div class="modal-body">
                            <div class="heading mb-3">
                                <h1 class="modal-title fs-3" id="exampleModalToggleLabel">Add Course here</h1>
                                <button type="button" class="btn-close" data-bs-dismiss="modal"
                                    aria-label="Close"></button>
                            </div>
                            <form id="form"> 
                                <div class="mb-1">
                                    <label for="recipient-name" class="col-form-label">Course name:</label>
                                    <input type="text" class="form-control" id="course-name" placeholder="text">
                                </div>
                                <div class="mb-1">
                                    <label for="recipient-name" class="col-form-label">Course Duration:</label>
                                    <input type="text" class="form-control" id="course-duration" placeholder="text">
                                </div>
                                <div class="mb-1">
                                    <label for="recipient-name" class="col-form-label">Course Fee:</label>
                                    <input type="number" class="form-control" id="course-fee" placeholder="number">
                                </div>
                                <button class="btn text-white mt-3" style="background-color: #1eb2a6;"
                                    type="submit">Submit</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <div class="allCourses">
                <% for(let i = 0; i < course.length; i++) {%>
                <div class="card mb-3" style="padding: 0px;">
                    <div class="card-body d-flex" style="align-items: center; justify-content: space-between;">
                        <div class="course-info">
                            <h5 class="card-title"><%= course[i].courseName %></h5>
                            <p class="card-text" style="font-size: 16px; margin-bottom: 0px; color: #01524b66;"><%= course[i].courseDuration %>
                            </p>
                            <p class="card-text" style="font-size: 12px; margin-bottom: 0px; color: #01524b66;">â‚¹ <%= course[i].courseFee %>
                            </p>
                        </div>
                        <div class="btns">
                            <button class="btn edit-btn" style="background-color: #61d1c8; color: white; font-size: 20px;" data-bs-target="#exampleModalToggle"
                            data-bs-toggle="modal"><i
                                    class="fa-solid fa-pen-to-square"></i></button>
                            <button class="btn delete-btn" Style="background-color: red; color: white; font-size: 20px;" value="<%= course[i].id %>"><i
                                    class="fa-regular fa-trash-can"></i></button>
                        </div>
                    </div>
                </div>
                <%} %>
            </div>
        </div>
    </div>
    <script>
        $(document).ready(function(){
           $('#form').on('submit', function(){
                let name = $('#course-name').val();
                let duration = $('#course-duration').val();
                let fee = $('#course-fee').val();

                let data = {name : name, duration : duration, fee : fee};
                console.log(data);

                $.ajax({
                    type: 'POST',
                    url: '/api/courses/addCourse',
                    data: data,
                    success : function(data){
                        // console.log(data);
                        location.reload();
                }

            })
             return false;
           })
           $('.delete-btn').on('click', function(course){
                // console.log(course);
                let id = $(this).val();
                console.log(id);

                $.ajax({
                    type: 'DELETE',
                    url: `/api/courses/${id}`,
                    data : id,
                    success : function(data){
                        location.href = 'getAllCourses';
                    }
                })
           })
           $('.edit-btn').on('click', function(course){
                $('#exampleModalToggle').model()
                let id = $(this).val();
                console.log(id);
                
                
            
           })
        })
    </script>
</body>

</html>



